FROM ubuntu:20.04

LABEL maintainer="luca@foppiano.org" \
    src="https://github.com/lfoppiano/arewedown"

RUN apt-get update \
    && apt-get install bash sudo git curl sshpass python3-minimal python3-pip -y

RUN curl -s -O https://deb.nodesource.com/node_12.x/pool/main/n/nodejs/nodejs_12.20.2-deb-1nodesource1_amd64.deb \
    && dpkg -i nodejs_12.20.2-deb-1nodesource1_amd64.deb \
    && rm nodejs_12.20.2-deb-1nodesource1_amd64.deb

RUN  mkdir -p /etc/arewedown \
    && adduser -u 1000 arewedown \
    && adduser arewedown sudo \
    && echo '%sudo ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers \
    && chmod 700 -R /etc/arewedown \
    && chown -R arewedown /etc/arewedown    
    
COPY ./.stage/src/. /etc/arewedown

USER arewedown

CMD cd /etc/arewedown && npm start